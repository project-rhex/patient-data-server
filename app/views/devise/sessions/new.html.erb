<%= stylesheet_link_tag :login %>
<div class="login">
<h2>Login</h2>

<div id="flow">

<div id="userpass">
  <h3>Enter your user credentials</h3>
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div><%= f.label :email %><br />
  <%= f.email_field :email %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit("Login") %></div>
<% end %>
  <%= render :partial => "devise/shared/links" %>
</div>

<div id="openconnectemail">
  <h3>Enter your email address</h3>
  <!-- Fill in the appropriate information in this form_for and the text and submit for the
        open id connect submission -->
  <%= form_for(resource, :url => session_path(resource_name)) do |f| %>
  <%= f.text_field(:email) %><br>
  <%= f.submit("Login") %>
  <% end %>
</div>

<div id="sep">
   <div id="or">OR</div>
   <div id="bar"></div>
</div>

<div id="openid">
  <h3>Select an identity provider</h3>
  <table><tr>
      <td>
        <a href="/auth/openid_connect" class="auth_provider">
        <%= image_tag "open_id_large.png", :class => "tag", :alt => "OpenID" %>
        </a>
      </td>
      <td>
        <a href="#" onclick="window.location='/auth/open_id?openid_url=id.mitre.org'" class="auth_provider">
        <%= image_tag "mitre_open_id.png", :class => "tag", :alt => "MITRE Open ID" %>
        </a>
      </td>
    </tr>
    <tr>
      <td>
        <a href="#" class="auth_provider">
        <%= image_tag "cac_large.png", :class => "tag", :alt => "Common Access Card" %>
        </a>
      </td>
      <td>
        <a href="#" class="auth_provider">
        <%= image_tag "google_large.png", :class => "tag", :alt => "Google Authentication" %>
        </a>
      </td>
    </tr>
  </table>

</div>
</div>
      
</div>